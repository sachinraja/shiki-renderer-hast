{
  "name": "shiki-renderer-hast",
  "version": "1.0.0",
  "type": "module",
  "description": "hast renderer for Shiki",
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm clean && tsup src/index.ts --format esm --dts",
    "clean": "rimraf dist",
    "format": "prettier -w .",
    "lint": "run-p lint:*",
    "lint:format": "prettier -c .",
    "lint:types": "tsc",
    "lint:xo": "xo",
    "prepare": "husky install",
    "prepublishOnly": "pnpm build",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "peerDependencies": {
    "shiki": "^0.9"
  },
  "dependencies": {
    "hastscript": "^7.0.2"
  },
  "devDependencies": {
    "@swc-node/jest": "1.3.5",
    "@swc/core": "1.2.106",
    "@types/jest": "27.0.2",
    "@types/node": "16.11.6",
    "eslint-config-prettier": "8.3.0",
    "hast-util-to-html": "8.0.3",
    "husky": "7.0.4",
    "jest": "27.3.1",
    "lint-staged": "11.2.6",
    "npm-run-all": "4.1.5",
    "prettier": "2.4.1",
    "prettier-plugin-pkg": "0.10.0",
    "regenerator-runtime": "0.13.9",
    "rimraf": "3.0.2",
    "shiki": "0.9.12",
    "tsup": "5.6.0",
    "typescript": "4.4.4",
    "xo": "0.46.4"
  },
  "sideEffects": false,
  "lint-staged": {
    "*.{js,ts,md,json,yaml}": "prettier -w"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "plugins": [
      "./node_modules/prettier-plugin-pkg"
    ]
  },
  "xo": {
    "extends": [
      "prettier"
    ]
  }
}
