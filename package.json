{
  "name": "shiki-renderer-hast",
  "version": "1.1.5",
  "type": "module",
  "description": "hast renderer for Shiki",
  "repository": {
    "type": "git",
    "url": "https://github.com/sachinraja/shiki-renderer-hast.git"
  },
  "homepage": "https://github.com/sachinraja/shiki-renderer-hast#readme",
  "bugs": {
    "url": "https://github.com/sachinraja/shiki-renderer-hast/issues"
  },
  "author": "Sachin Raja <sachinraja2349@gmail.com>",
  "license": "MIT",
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "shiki",
    "hast"
  ],
  "scripts": {
    "build": "tsup",
    "format": "dprint fmt",
    "lint": "run-p lint:*",
    "lint:format": "dprint check",
    "lint:types": "tsc",
    "lint:js": "eslint .",
    "prepare": "husky install",
    "prepublishOnly": "pnpm build",
    "test": "vitest"
  },
  "peerDependencies": {
    "shiki": "^0.9 || ^0.10.0 || ^0.11.0 || ^0.14.0 || ^1.0.0"
  },
  "dependencies": {
    "hastscript": "^7.0.2"
  },
  "devDependencies": {
    "@types/node": "17.0.15",
    "@typescript-eslint/eslint-plugin": "5.10.2",
    "@typescript-eslint/parser": "5.10.2",
    "dprint": "0.22.0",
    "eslint": "8.8.0",
    "eslint-config-prettier": "8.3.0",
    "hast-util-to-html": "8.0.3",
    "husky": "7.0.4",
    "nano-staged": "0.5.0",
    "npm-run-all": "4.1.5",
    "shiki": "0.10.0",
    "tsup": "5.11.13",
    "typescript": "4.5.5",
    "vite": "2.7.13",
    "vitest": "0.2.7"
  },
  "sideEffects": false,
  "nano-staged": {
    "*.{js,ts,md,json,yaml}": "dprint fmt"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm"
    ],
    "dts": true,
    "clean": true
  }
}
